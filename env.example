# ============================================
# Healthcare Management System - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control (it should be in .gitignore)

# ============================================
# Spring Profile / App
# ============================================
# Active Spring profile (used by spring.profiles.active in application.properties)
# Options: dev, docker, prod
SPRING_PROFILES_ACTIVE=dev

# Optional: application name (maps to spring.application.name if you want to override)
# SPRING_APPLICATION_NAME=HealthCare

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
# application.properties references these exact env names
DATABASE_URL=jdbc:postgresql://localhost:5432/healthcare_db
DB_USERNAME=healthcare_user
DB_PASSWORD=your_database_password

# If your cloud provider requires SSL/extra params, add them to DATABASE_URL, e.g.:
# DATABASE_URL=jdbc:postgresql://host:port/dbname?sslmode=require

# ============================================
# RabbitMQ Configuration
# ============================================
# application.properties uses spring.rabbitmq.addresses=${RABBITMQ_URL}
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_USERNAME=rabbitmq_user
RABBITMQ_PASSWORD=rabbitmq_password

# For docker-compose, you may use the service name:
# RABBITMQ_URL=amqp://rabbitmq:5672

# Optional Docker/RabbitMQ management ports
RABBITMQ_CONTAINER_NAME=healthcare-rabbitmq
RABBITMQ_AMQP_PORT=5672
RABBITMQ_MGMT_PORT=15672

# ============================================
# Email (SMTP)
# ============================================
# For Development (Gmail) - application.properties references EMAIL_ID and EMAIL_PASSWORD
EMAIL_ID=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# For Production (SendGrid) - application-prod.properties references SENDGRID_USERNAME and SENDGRID_API_KEY
SENDGRID_USERNAME=apikey
SENDGRID_API_KEY=your-sendgrid-api-key

# Note: application.properties / application-prod.properties will set:
# - spring.mail.username=${EMAIL_ID} (dev)
# - spring.mail.password=${EMAIL_PASSWORD} (dev)
# - spring.mail.username=${SENDGRID_USERNAME} (prod)
# - spring.mail.password=${SENDGRID_API_KEY} (prod)
# We keep EMAIL_* for dev and SENDGRID_* for prod credentials above.

# If you need to override host/port/protocol for other providers, set these (optional):
# SPRING_MAIL_HOST=smtp.your-provider.com
# SPRING_MAIL_PORT=587
# SPRING_MAIL_PROTOCOL=smtp

# ============================================
# JWT / Security
# ============================================
# application.properties expects jwt.secret=${JWT_SECRET}
# IMPORTANT: Use a strong, random secret in production (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-256-bits
# Optional override for token expiration (application.properties sets a default)
JWT_EXPIRATION_MS=86400000

# Password reset token expiry (minutes) - application.properties default: 60
PASSWORD_RESET_TOKEN_EXPIRY_MINUTES=60

# ============================================
# Cashfree Payment Gateway
# ============================================
# application.properties references cashfree.env, cashfree.appId and cashfree.secretKey
CASHFREE_ENV=SANDBOX
APP_ID=your-cashfree-app-id
SECRET_KEY=your-cashfree-secret-key
# To enable webhook signature validation in production, change cashfree.webhook.signature.validation.enabled in application-prod.properties
# Optionally expose via env (Spring relaxed binding):
# CASHFREE_WEBHOOK_SIGNATURE_VALIDATION_ENABLED=false

# ============================================
# Application URLs (used for redirects, webhooks)
# ============================================
FRONTEND_BASE_URL=http://localhost:5173
BACKEND_BASE_URL=http://localhost:8080

# CORS Configuration (used by SecurityConfig.java)
# Comma-separated list of allowed origins for CORS
# Default includes localhost and ngrok for development
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://*.ngrok-free.app

# ============================================
# Docker / Container (optional helper variables)
# ============================================
APP_CONTAINER_NAME=healthcare-app
APP_PORT=8080

# ============================================
# Logging (optional)
# ============================================
# Override logging.level.root in application.properties if needed
# LOGGING_LEVEL_ROOT=INFO

# ============================================
# Twilio (optional - used for video calls and SMS)
# ============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_API_KEY=your-twilio-api-key
TWILIO_API_SECRET=your-twilio-api-secret

# ============================================
# Additional Notes
# ============================================
# 1. Never commit actual secrets to version control. Keep .env in .gitignore.
# 2. Use different credentials for dev, staging, and production.
# 3. Prefer a secrets manager (AWS Secrets Manager, Vault) for production.
# 4. For Gmail App Password: https://support.google.com/accounts/answer/185833
# 5. If you add new properties in application.properties, mirror them here with explanatory comments.
